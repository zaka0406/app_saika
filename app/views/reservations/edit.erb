<div class="reservation">
    <h1 class="reservation-title">予約修正</h1>

   
        <%= form_with(model: @reservation, local: true, class: 'form', url: reservation_path(@reservation)) do |form| %>
            <% if @reservation.errors.any? %>
                <div class="error-messages">
                    <ul>
                        <% @reservation.errors.full_messages.each do |message| %>
                        <li class="error"><%= message %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>

        <div class="form-group">
            <div class="nav">
                <%= form.label :day, '日付<span class="required-label">必須</span>'.html_safe %>
            </div>
            <div class="input">
                <%= form.text_field :day, class: 'form-control', value:@reservation.day %>

            </div>
        </div>
        <div class="form-group">
            <div class="nav">
                <%= form.label :time, '時間<span class="required-label">必須</span>'.html_safe %>
            </div>
           <div class="input">
                <%= form.select :time, options_for_select(['10:00', '14:00'], selected: @reservation.time), {include_blank: '選択してください'}, class: 'form-control' %>
            </div>
            <div class="form-group">
            <div class="nav">
                <%= form.label :name, '名前<span class="required-label">必須</span>'.html_safe %>
            </div>
            <div class="input">
                <%= form.text_field :name, class: 'form-control', value: @reservation.name, placeholder: "お名前を入力" %>
            </div>
        </div>
        
        <div class="form-group">
            <div class="nav">
               <%= form.label :email, 'emailアドレス<span class="required-label">必須</span>'.html_safe %>
            </div>
            <div class="input">
                <%= form.email_field :email, class: 'form-control', value: @reservation.email, placeholder: "example@example.com" %>
            </div>
        </div>

        <div class="form-group">
            <div class="nav">
               <%= form.label :phone_number, '電話番号<span class="required-label">必須</span>'.html_safe %>
            </div>
            <div class="input">
                <%= form.text_field :phone_number, class: 'form-control',value: @reservation.phone_number, placeholder: "000-1234-5678" %>
            </div>
        </div>

        <div class="form-group">
            <div class="nav">
                <%= form.label :select, 'コース選択<span class="required-label">必須</span>'.html_safe %>

            </div>
            <div class="input">
               <%= form.select :category, options_for_select(['個性カウンセリング', '心のメンテナンス', '個性&心のメンテナンス'], selected: @reservation.category), {include_blank: '選択してください'}, class: 'form-control' %>
            </div>
        </div>

            <div class="submit">
                <%= form.hidden_field :start_time, value: @start_time %>
                <%= form.submit value: '予約修正保存', class: 'btn btn-primary mx-auto d-block' %>
            
             </div>

        <% end %>
       
</div>
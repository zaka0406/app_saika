<div class="reservation">
    <div class="reservation-nav">
        <h1 class="reservation-title">管理者日程変更画面</h1>
        </div>
    
     <%= form_with model: @saika, local: true do |form| %>
     <div class="form-group">
            <div class="nav">
                <%= form.label :day, '日付<span class="required-label">必須</span>'.html_safe %>
            </div>
            <div class="input">
                <%= form.text_field :day, class: 'form-control', value: @day %>
            </div>
        </div>
        <div class="form-group">
            <div class="nav">
                <%= form.label :time, '時間<span class="required-label">必須</span>'.html_safe %>
            </div>
            <div class="input">
                <%= form.text_field :time, class: 'form-control', value: @time %>
            </div>

       <%= form.hidden_field :start_time, value: @start_time %>
       <%= form.submit '更新する' %>
      <% end %>

    
</div>